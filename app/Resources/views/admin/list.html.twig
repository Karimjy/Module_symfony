{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h2>Admin</h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="{{ path('article_new') }}" class="btn btn-sm btn-info">Ajouter un article</a>
            <a href="{{ logout_path() }}" class="btn btn-sm btn-danger">Deconnection</a>
        </div>

        {% for article in articles %}
            <div class="col-md-8">
                <a href="{{ path('article_show', {id: article.id}) }}">
                    <h4>{{ article.title }}</h4>
                </a>
            </div>
            <div class="col-md-4 text-right">
                <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-success">Edit</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('article_delete', {id: article.id}) }}" class="btn btn-danger">Supprimer</a>
                {% endif %}
            </div>
        {% endfor %}

    </div>
{% endblock %}
